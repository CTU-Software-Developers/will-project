@model IEnumerable<event_management_system.Models.SportList>

@{
    ViewBag.Title = "Sport Events";
}

@{
    if (Model != null)
    {
        foreach (var Data in Model)
        {
            <div class="event-container">
                <div class="event-image">

                </div>
                <div class="event-info">
                    <h3 class="event-header">
                        @Data.EventName
                    </h3>
                    <p class="event-description">
                        @Data.EventDescription
                    </p>
                    <p class="date-time">
                        @Data.EventDate
                        @Data.EventTime
                    </p>
                    <div class="btns">
                        <button class="event-btns">
                            @Html.ActionLink("Reviews", "Index", "EventRevies", new { id = Data.EventID })
                        </button>
                        <button class="event-btns">
                            Price: R @Data.TicketPrice
                        </button>
                    </div>
                </div>
            </div>
        }
    }
}